@model IEnumerable<Spartacus.Domain.Entities.Membership.CatTable>

@{
    ViewBag.Title = "Membership";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="page-title bg-2">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <ul class="list-inline mb-0">
                    <li class="list-inline-item"><a href="index.html" class="text-sm letter-spacing text-white text-uppercase font-weight-bold">Home</a></li>
                    <li class="list-inline-item"><span class="text-white">|</span></li>
                    <li class="list-inline-item"><a href="#" class="text-color text-uppercase text-sm letter-spacing">Pricing</a></li>
                </ul>
                <h1 class="text-lg text-white mt-2">Memebership </h1>
            </div>
        </div>
    </div>
</section>

<!-- Section pricing start -->
<section class="section pricing">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <div class="section-title">
                    <div class="divider mb-3"></div>
                    <h2>Package Pricing</h2>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            @foreach (var m in Model)
            {
                <div class="col-xl-4 col-md-6 mb-4">
                    <div class="card rounded-0 px-4 py-5 bg-mem">
                        <div class="position-relative text-white">
                            <h4 class="card-title text-capitalize font-weight-normal font-secondary fs-2">@m.Title</h4>
                            <div class="card-subtitle fw-light font-secondary">@m.Description</div>
                            
                            <div class="card-body mt-2">
                                <div class="entry">
                                    <div class="text-uppercase left fw-bold fs-5">1 lună</div>
                                    <div class="dots"></div>
                                    <a href=@Url.Action("Begin", "Checkout", new {mid = m.Id, dur = Spartacus.Domain.Enums.MsDuration.OneMonth}) class="right fw-bold fs-5">@m.PriceOneMonth lei</a>
                                </div>
                                <div class="entry pt-4">
                                    <div class="text-uppercase left fw-bold fs-5">3 luni</div>
                                    <div class="dots"></div>
                                    <a href=@Url.Action("Begin", "Checkout", new {mid = m.Id, dur = Spartacus.Domain.Enums.MsDuration.ThreeMonths}) class="right fw-bold fs-5">@m.PriceThreeMonths lei</a>
                                </div>
                                <div class="entry pt-4">
                                    <div class="text-uppercase left fw-bold fs-5">6 luni</div>
                                    <div class="dots"></div>
                                    <a href=@Url.Action("Begin", "Checkout", new {mid = m.Id, dur = Spartacus.Domain.Enums.MsDuration.SixMonths}) class="right fw-bold fs-5">@m.PriceSixMonths lei</a>
                                </div>
                                <div class="entry pt-4 pb-3">
                                    <div class="text-uppercase left fw-bold fs-5">12 luni</div>
                                    <div class="dots"></div>
                                    <a href=@Url.Action("Begin", "Checkout", new {mid = m.Id, dur = Spartacus.Domain.Enums.MsDuration.OneYear}) class="right fw-bold fs-5 border-1 border-white">@m.PriceOneYear lei</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Section pricing End -->
