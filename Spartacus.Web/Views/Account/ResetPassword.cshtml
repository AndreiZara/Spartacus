@model Spartacus.Web.Models.ResetPassword
@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<h2 class="mb-2 text-center">Change password</h2>
<p class="m-0">Enter new password for your account.</p>
@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-floating mt-3">
        @Html.TextBoxFor(m => m.NewPassword, new
        {
            @class = "form-control",
            placeholder = "",
            type = "password",
        })
        @Html.LabelFor(m => m.NewPassword)
        @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
    </div>
    <div class="form-floating mt-3">
        @Html.TextBoxFor(m => m.ConfirmNewPassword, new
        {
            @class = "form-control",
            placeholder = "",
            type = "password",
        })
        @Html.LabelFor(m => m.ConfirmNewPassword)
        @Html.ValidationMessageFor(m => m.ConfirmNewPassword, "", new { @class = "text-danger" })
    </div>
    <button class="btn btn-success btn-lg w-100 shadow-lg mt-4">CHANGE PASSWORD</button>
}