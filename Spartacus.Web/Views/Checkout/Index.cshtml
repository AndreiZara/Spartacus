@{
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}

@section Styles {
    @System.Web.Optimization.Styles.Render("~/bundles/checkout/css")
}

<div class="container mt-5 px-5">
    <div class="mb-4">
        <h2>Confirm order and pay</h2>
        <span>please make the payment, after that you can enjoy all the features and benefits.</span>
    </div>
    <div class="row">
        <div class="col-md-8">
            <form>
                <div class="card p-3">
                    <h5 class="text-uppercase">Payment details</h5>
                    <div class="form-floating mt-3">
                        <input autocomplete="cc-name" type="text" pattern="[a-zA-Z ]+" oninvalid="setCustomValidity('Please enter on alphabets only. ')" class="form-control" id="cc-name" name="cc-name" placeholder="" required>
                        <label for="cc-name">Name on Card</label>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mt-3 mr-2">
                                <input type="number" autocomplete="cc-number" class="form-control" id="cc-number" name="cc-number" placeholder="" required>
                                <label for="cc-number">Card Number</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating mt-3 mr-2">
                                <input type="number" autocomplete="cc-exp" class="form-control" id="cc-exp" name="cc-exp" placeholder="" required>
                                <label for="cc-exp">Expiry</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating mt-3 mr-2">
                                <input type="number" autocomplete="cc-csc" class="form-control" max="9999" min="100" id="cc-csc" name="cc-csc" placeholder="" required>
                                <label for="cc-csc">CVV</label>
                            </div>
                        </div>
                    </div>
                    <div class="mt-4 mb-4">
                        <h5 class="text-uppercase">Billing Address</h5>
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <div class="form-floating mt-3 mr-2">
                                    <input autocomplete="billing street-address" class="form-control" id="billing street-address" name="billing street-address" placeholder="" required>
                                    <label for="billing street-address">Street Address</label>
                                    <div class="invalid-feedback">
                                        Please provide a valid address.
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mt-3 mr-2">
                                    <input autocomplete="address-level2" class="form-control" id="address-level2" name="address-level2" placeholder="" required>
                                    <label for="address-level2">City</label>
                                    <div class="invalid-feedback">
                                        Please provide a valid city.
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-md-6">
                                <div class="form-floating mt-3 mr-2">
                                    <input autocomplete="country-name" class="form-control" id="country-name" name="country-name" placeholder="" required>
                                    <label for="country-name">Country</label>
                                    <div class="invalid-feedback">
                                        Please provide a valid Country.
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mt-3 mr-2">
                                    <input autocomplete="postal-code" class="form-control" maxlength="7" id="zip" name="zip" placeholder="" required>
                                    <label for="zip">Zip Code</label>
                                    <div class="invalid-feedback">
                                        Please provide a valid zip.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mt-4 mb-4 d-flex justify-content-between">
                    <span>Previous step</span>
                    <button type="submit" class="btn btn-main px-3">Pay $840</button>
                </div>
            </form>
        </div>
        <div class="col-md-4">
            <div class="card card-bg p-3 text-white">
                <span>You have to pay</span>
                <div class="d-flex flex-row align-items-end mb-3">
                    <h1 class="mb-0 text-white">$549</h1>
                    <span>.99</span>
                </div>
                <span>Enjoy all the features and perk after you complete the payment</span>
                <a href="#" class="text-white">Know all the features</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @System.Web.Optimization.Scripts.Render("~/bundles/checkout/js")
}